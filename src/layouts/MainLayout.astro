---
	import Header from "../components/Header.astro";
	import Navbar from "../components/Navbar.astro";
	import Footer from "../components/Footer.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;




---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<title>{title}</title>
</head>
<body>
	<Header />
	<Navbar />
	<slot />
	<Footer />
</body>
</html>

<style>
	/* pt-sans-700 - latin */
	@font-face {
		font-family: 'PT Sans';
		font-style: normal;
		font-weight: 700;
		src: local(''),
				/* url('fonts/pt-sans-v17-latin-700.woff2') format('woff2'),  */
				/* Chrome 26+, Opera 23+, Firefox 39+ */
				url('src/assets/fonts/pt-sans-v17-latin-700.woff') format('woff'); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
		font-display: swap;
	}

  :root {
		/* ~20px to  23.8px*/
    --font-size-base: clamp(1.25rem, 0.34vw + 1.1375rem, 1.4875rem);
    /* --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem); */
		--card--font-size: clamp(1rem, 5vw, 1.2rem); /* may use above instead of this old one */
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem); 
    --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

    --color-text: hsl(12, 5%, 4%);
    --color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);
		
    --p-line-height: clamp(1.681rem, 0.4vw + 1.529rem, 2rem);
		/* old line height: 2 || (max-width:960px) => 1.8 */

		
  }

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
		font-family: "PT Sans", sans-serif;
		font-weight: 700;
	}

  html {
    /* font-size: var(--font-size-base);  */
    /* color: var(--color-text); */
    /* background-color: var(--color-bg); */
		font-size: 20px;
		scroll-padding-top: 4rem;

  }

	:global(p) {
		/* 2 / 1.19 == 1.6806722689 ratio */
		/* line-height: clamp(1.8em, 0.0021vw, 2em); */
		/* line-height: clamp(1.8em, 0.496vw, 2em); */
		line-height: var(--p-line-height);
		/* 2em/960 ==  0.00208333 ??*/
		/* 40px/960px ==   0.041666 */
		/* 47.6px/960px ==   0.04958333 */
	}

	/* @media (max-width:960px) {
		p {
			line-height: 1.8;
		}
	} */

  :global(h1) {
    font-size: var(--font-size-xl);
  }

  :global(h2) {
    font-size: var(--font-size-lg);
  }

  :global(code) {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
